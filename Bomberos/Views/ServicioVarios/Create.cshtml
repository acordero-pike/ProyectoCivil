@model Bomberos.Models.ServicioVario

@{
    ViewData["Title"] = "Create";
}
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<h1>Crear Nuevo Registro</h1>

<h4>Servicios Varios</h4>
<hr />
<div class="">
    <div class="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-3">
                <label asp-for="SvEstacion" class="control-label">Estacion:</label>
                <select asp-for="SvEstacion" class="form-control" asp-items="ViewBag.SvEstacion"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvTurno" class="control-label">Turno:</label>
                <select asp-for="SvTurno" class="form-control" asp-items="ViewBag.SvTurno"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvFecha" class="control-label">Fecha:</label>
                <input asp-for="SvFecha" class="form-control" />
                <span asp-validation-for="SvFecha" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvDireccion" class="control-label">Dirección:</label>
                <input asp-for="SvDireccion" class="form-control" />
                <span asp-validation-for="SvDireccion" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvServicio" class="control-label">Servicio:</label>
                <input asp-for="SvServicio" class="form-control" />
                <span asp-validation-for="SvServicio" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvHoraSalida" class="control-label">Hora de Salida:</label>
                <input asp-for="SvHoraSalida" class="form-control" />
                <span asp-validation-for="SvHoraSalida" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvHoraEntrada" class="control-label">Hora de Entrada:</label>
                <input asp-for="SvHoraEntrada" class="form-control" />
                <span asp-validation-for="SvHoraEntrada" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvJefeServicio" class="control-label">Jefe de Servicio:</label>
                <select asp-for="SvJefeServicio" class ="form-control" asp-items="ViewBag.SvJefeServicio"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvTelefonistaTurno" class="control-label">Telefonista de Turno:</label>
                <select asp-for="SvTelefonistaTurno" class ="form-control" asp-items="ViewBag.SvTelefonistaTurno"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvBomberoReporta" class="control-label">Bombero que Reporta:</label>
                <select asp-for="SvBomberoReporta" class ="form-control" asp-items="ViewBag.SvBomberoReporta"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvUnidad" class="control-label">Unidad: </label>
                <input asp-for="SvUnidad" class="form-control" />
                <span asp-validation-for="SvUnidad" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvPiloto" class="control-label">Piloto: </label>
                <select asp-for="SvPiloto" class ="form-control" asp-items="ViewBag.SvPiloto"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvServicioAutPor" class="control-label">Servicio de Auto: </label>
                <select asp-for="SvServicioAutPor" class ="form-control" asp-items="ViewBag.SvServicioAutPor"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvPersonalAsistente" class="control-label">Personal Asistente: </label>
                <select asp-for="SvPersonalAsistente" class ="form-control" asp-items="ViewBag.SvPersonalAsistente"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvKmEntrada" class="control-label">Km de Entrada: </label>
                <input asp-for="SvKmEntrada" class="form-control" />
                <span asp-validation-for="SvKmEntrada" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvKmSalida" class="control-label">Km de Salida: </label>
                <input asp-for="SvKmSalida" class="form-control" />
                <span asp-validation-for="SvKmSalida" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvKmRecorrido" class="control-label">Km Recorridos: </label>
                <input asp-for="SvKmRecorrido" class="form-control" />
                <span asp-validation-for="SvKmRecorrido" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvFirmaBombero" class="control-label">Firma de Bombero: </label>
                <select asp-for="SvFirmaBombero" class="form-control" asp-items="ViewBag.SvFirmaBombero"></select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SvNoBombero" class="control-label">No. de Bombero</label>
                <input asp-for="SvNoBombero" class="form-control" />
                <span asp-validation-for="SvNoBombero" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="SvObservacion" class="control-label">Observacion: </label>
                <textarea asp-for="SvObservacion" class="form-control" style="height:150px"></textarea>
                <span asp-validation-for="SvObservacion" class="text-danger"></span>
            </div>
          
            <div class="form-group col-md-6">
                <br />
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index">Regresar al Listado</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
