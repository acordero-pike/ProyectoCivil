@model IEnumerable<Bomberos.Models.Turno>

@{
    ViewData["Title"] = "Index";
}

<h1>Turnos</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Nombre)*@
                Nombre
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.Descripcion)*@
               Descripcion
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Horario)*@
                Horario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTurno">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdTurno">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTurno">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
