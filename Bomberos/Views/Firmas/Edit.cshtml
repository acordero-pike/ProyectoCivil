@model Bomberos.Models.Firma

@{
    ViewData["Title"] = "Editar Firma";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<div class="orden">
    <a asp-action="Index"><img src="~/img/flecha-izquierda.png" width="50" height="50" /></a>
</div>

<h1><center>Editar Firma</center></h1>
<h4><center>Firmas de Bombero</center></h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFirma" />

            <div class="form-group ">
                <label asp-for="Firma1" class="control-label" hidden></label>
                <input asp-for="Firma1" class="form-control" hidden value="test" />
                <span asp-validation-for="Firma1" class="text-danger" hidden></span>
            </div>
            <div class="form-group ">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="Firma1" class="control-label"></label>

                <input type="file" class="form-control" name="formFile" id="formFile" required>

            </div>
            <div class="form-group ">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
