@model IEnumerable<Bomberos.Models.Firma>

@{
    ViewData["Title"] = "Firmas";
}<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<h1><center>Firmas de Bomberos</center></h1>
<br>

<div class="orden">
    <p>
        <a asp-action="Create"><img src="~/img/agregar-documento.png" width="50" height="50" /></a>
    </p>
    <h3>Crear una Nueva Firma</h3>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firma1)
            </th>
                <th><center></center></th>
                <th><center></center></th>
                <th><center></center></th>
            </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
              <img height="100" width=" 100" src="@Url.Action("convert","Firmas",new { id = item.IdFirma })" />

            </td>
                    <td>
                        <center>
                            <a asp-action="Edit" asp-route-id="@item.IdFirma"><img src="~/img/editar.png" width="40" height="40" /> </a>
                        </center>
                    <td>
                        <center>
                            <a asp-action="Details" asp-route-id="@item.IdFirma"><img src="~/img/votacion.png" width="40" height="40" /> </a>
                        </center>
                    </td>
                    <td>
                        <center>
                            <a asp-action="Delete" asp-route-id="@item.IdFirma"><img src="~/img/basura.png" width="40" height="40" /> </a>
                        </center>
                    </td>
        </tr>
}
    </tbody>
</table>
