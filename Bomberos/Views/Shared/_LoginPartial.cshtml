@using Microsoft.AspNetCore.Identity @* vista parcial de login donde se define si esta autorizado muestre el nombre de la persona guardado en l acookie  *@

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="" title="Usuario">Hello @User.Claims.First().Value!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark"  asp-controller="Account" asp-action="Logout" title="Logoff">Logoff</a>

        </li>
    }
    else
    {
 
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
